<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>{% block title %}Shop{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% endblock %}
    {#<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>#}
</head>
{% block header %}
    <header>
        <nav class="navbar navbar-toggleable-md navbar-light bg-faded">
            <a class="navbar-brand" href="#">
                <img src="http://www.jbvirtuals.com/images/ecommerce.png" width="30" height="30" alt="">
            </a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


            <a class="navbar-brand" href="{{ path('shop_index') }}">Webstore</a>

            <div class="navbar-collapse collapse" id="navbarNavDropdown">

                <ul class="nav navbar-nav navbar-left">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('shop_index') }}">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('all_users') }}">All users</a>
                    </li>
                    {#<li class="nav-item dropdown">#}
                        {#<a class="nav-link dropdown-toggle" href="http://example.com" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">#}
                            {#Dropdown link#}
                        {#</a>#}
                        {#<div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">#}
                            {#<a class="dropdown-item" href="#">Action</a>#}
                            {#<a class="dropdown-item" href="#">Another action</a>#}
                            {#<a class="dropdown-item" href="#">Something else here</a>#}
                        {#</div>#}
                    {#</li>#}
                </ul>

            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="#">Welcome, <strong>{{ app.user.username }}</strong><img class="user-pic" src="{{ asset('images/users/profile-pics/default.jpg') }}" alt="pic"></a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="#"><strong>Cart</strong> <img class="user-pic" src="{{ asset('images/icons/cart.png') }}" alt="pic"> (0 items)</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">Log out</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_login') }}">Log in</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('user_register') }}">Register</a>
                        </li>
                    {% endif %}
                </ul>
            </div>

        </nav>

    </header>

{% endblock %}

<body id="{% block body_id %}{% endblock %}">

{% for flash_message in app.session.flashBag.get('notice') %}
    <div class="alert alert-success">
        {{ flash_message }}
    </div>
{% endfor %}


{% block content %}

{% endblock %}

{% block footer %}
    <footer>
        <div class="container modal-footer">
            <p>&copy; 2016 - Software University Foundation</p>
        </div>
    </footer>
{% endblock %}

</body>

{% block javascripts %}
    <script src="{{ asset('js/scripts.js') }}"></script>
    {#<script src="{{ asset('js/bootstrap.min.js') }}"></script>#}
    <script src="{{ asset('js/npm.js') }}"></script>
    <script src="{{ asset('js/jquery-3.2.0.min.js') }}"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js"></script>
    {#<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>#}
{% endblock %}
</html>

